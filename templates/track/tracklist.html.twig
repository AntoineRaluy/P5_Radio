{% extends 'base.html.twig' %}

{% block body %}

    <h1>Base de données des titres de la radio</h1>
    
    <table class="table">
  <thead>
    <tr>
      <th scope="col">Artiste</th>
      <th scope="col">Titre</th>
      <th scope="col">Genre</th>
      <th scope="col">Année</th>
    </tr>
  </thead>
  <tbody>

    {% for track in tracks %}
        <tr>
            <td>{{ track.artist }}</td>
            <td><a class="a-title" href="{{ path('app_track_show', { id: track.id }) }}">{{ track.title }}</a></td>
            <td class="genre">{{ track.genre }}</td>
            <td>{{ track.year }}</td>
        </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}
