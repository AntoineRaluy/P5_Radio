<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="bg-info navmenu">
                <nav class="navbar navbar-expand-md navbar-dark">
                    <a class="navbar-brand mr-5" href="{{ path('app_homepage') }}"><h1>Radio</h1></a>
                    <div id="collapse navbar-collapse">
                        <ul class="navbar-nav">
                            <li class="nav-item active">
                                <a class="nav-link" href='{{ path('app_homepage') }}'>Accueil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_track_new') }}">Proposer un morceau</a>
                            </li> 
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_tracklist') }}">Liste des morceaux</a>
                            </li> 
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_contact') }}">Contact</a>
                            </li> 
                        </ul>
                        <ul class="navbar-nav">
                            {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_user') }}">Voir Profil</a>
                            </li> 
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}">DÃ©connexion</a>
                            </li> 
                            {% else %}
