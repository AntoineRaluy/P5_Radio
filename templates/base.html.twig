                                <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                            </li> 
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_register') }}">S'inscrire</a>
                            </li> 
                            {% endif %}
                        </ul>
                    </div>
                </nav>
    </header>

        {% include 'flash_messages.html.twig' %}

        {% block body %}
        {% endblock %}
        {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
