<!DOCTYPE html>
<html lang="fr-FR">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Bonjour !{% endblock %}</title>
        {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="bg-info navmenu">
                <nav class="navbar navbar-expand-md navbar-dark">
                    <a class="navbar-brand mr-5" href="{{ path('app_homepage') }}"><h1>Radio</h1></a>
                    <div id="collapse navbar-collapse">
                        <ul class="navbar-nav">
                            <li class="nav-item active">
                                <a class="nav-link" href='{{ path('app_homepage') }}'>Accueil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_track_new') }}">Proposer un morceau</a>
                            </li> 
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_tracklist') }}">Liste des morceaux</a>
                            </li> 
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_contact') }}">Contact</a>
                            </li> 
                        </ul>
                        <ul class="navbar-nav">
                            {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_user', {username: app.user.username}) }}">Voir Profil</a>
                            </li> 
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                            </li> 
                                {% if is_granted('ROLE_ADMIN') == true %}
                                <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin') }}">Panneau d'administration</a>
                                </li> 
                                {% endif %}
                            {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                            </li> 
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_register') }}">S'inscrire</a>
                            </li> 
                            {% endif %}
                        </ul>
                    </div>
                </nav>
    </header>

        {% include 'flash_messages.html.twig' %}

        {% block body %}
        {% endblock %}

        {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        <script src="//cookie.eurowebpage.com/cookie.js?skin=cookielaw3&amp;box_radius=4&amp;position=bottom_right&amp;delay=1&amp;bg_color=22a9e6&amp;msg_color=ffffff&amp;link_color=0c0c0c&amp;accept_background=ffffff&amp;accept_color=295285&amp;accept_radius=3"></script>

        {{ encore_entry_script_tags('flashMessage') }}

        {% endblock %}
    </body>
    <footer class="bg-info footmenu">
        <p class="text-center pt-1"><a class="policies text-white" href="{{ path('app_policies') }}">Mentions légales</a> <a class="cookies pl-3 pr-3 text-white" href="{{ path('app_cookies') }}">Politique de confidentialité</a> <a class="sitemap text-white " href="{{ path('sitemap') }}">Plan du site</a></p>
    </footer>
</html>
